<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 offset-1">
      <h1><%= @article.title %></h1>
      <p><%= @article.content %></p>
      <%= link_to "Edit", edit_article_path(@article), class:"btn-article" %>
      <%= link_to "Destroy", article_path(@article), method: :delete, data: { confirm: "Are you sure?" }, class:"btn-article" %>
    </div>
  </div>
</div>
