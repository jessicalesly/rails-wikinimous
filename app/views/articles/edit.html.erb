<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 offset-3">
      <div class="formulaire">
        <h1>Edit article</h1>
        <%= form_for(@article) do |f| %>
          <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title %>
          </div>
          <div class="form-group">
            <%= f.label :content %>
            <%= f.text_field :content %>
          </div>
          <%= f.submit "Update", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

